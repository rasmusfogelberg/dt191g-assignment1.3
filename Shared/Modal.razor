@using RazmusBlazorWASM.Entities;

<div class="modal fade @modalClass" id="exampleModal" tabindex="-1" aria-labelledby="modalLabel" style="display: @modalDisplay">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">@Title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="() => Close()"></button>
      </div>
      <div class="modal-body">
        @Body
      </div>
    </div>
  </div>
</div>

@code {
    private string modalDisplay = "";
    private string modalClass = "";

    [Parameter]
    public RenderFragment Title { get; set; } = default!;

    [Parameter]
    public RenderFragment Body { get; set; } = default!;

    public async Task Open()
    {
        modalDisplay = "block";
        await Task.Delay(100);
        modalClass = "show";
    }

    public async Task Close()
    {
        modalDisplay = "none";
        await Task.Delay(100);
        modalClass = "";
    }
}